{
  "name": "@bandallon/testing",
  "version": "0.0.1",
  "description": "Testing additions for Bandallon",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --passWithNoTests",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "github.com/ndouglas/bandallon"
  },
  "author": "Nathan Douglas <bandallon@tenesm.us>",
  "license": "Unlicense",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "jsdom",
    "verbose": true
  }
}